<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Vigil.MainPage"
             Title="Vigil Accelerometer">

    <ScrollView>
        <VerticalStackLayout
            VerticalOptions="Center"
            HorizontalOptions="Center"
            Spacing="20"
            Padding="20">

            <Button
                x:Name="StartStopButton"
                Text="Start"
                Clicked="OnStartStopButtonClicked"
                HorizontalOptions="Center"
                WidthRequest="200"
                HeightRequest="60"
                FontSize="Large"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>